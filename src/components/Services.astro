const services = [
  {
    icon: 'heating',
    title: 'Heating Services',
    description: 'Expert furnace installation, repair, and maintenance to keep your home warm and comfortable all winter long.',
    features: ['Furnace Installation', 'Boiler Repair', 'Heat Pump Service', 'Ductwork Inspection']
  },
  {
    icon: 'cooling',
    title: 'Air Conditioning',
    description: 'Professional AC installation and repair services to ensure your home stays cool and comfortable during hot summer months.',
    features: ['AC Installation', 'System Repair', 'Refrigerant Service', 'Thermostat Upgrade']
  },
  {
    icon: 'maintenance',
    title: 'Maintenance Plans',
    description: 'Comprehensive maintenance programs designed to keep your HVAC system running efficiently and prevent costly breakdowns.',
    features: ['Seasonal Tune-ups', 'Filter Replacement', 'System Cleaning', 'Performance Testing']
  },
  {
    icon: 'emergency',
    title: 'Emergency Repair',
    description: '24/7 emergency HVAC repair services when you need them most. Fast response times and reliable solutions.',
    features: ['24/7 Availability', 'Same-Day Service', 'Emergency Diagnostics', 'Urgent Repairs']
  },
  {
    icon: 'installation',
    title: 'System Installation',
    description: 'Complete HVAC system installation with expert design, professional installation, and comprehensive warranties.',
    features: ['System Design', 'Professional Install', 'Warranty Coverage', 'Performance Testing']
  },
  {
    icon: 'indoor-air',
    title: 'Indoor Air Quality',
    description: 'Improve your home\'s air quality with our comprehensive solutions including air purifiers, humidifiers, and filtration systems.',
    features: ['Air Purification', 'Humidity Control', 'Duct Cleaning', 'Filter Upgrades']
  }
