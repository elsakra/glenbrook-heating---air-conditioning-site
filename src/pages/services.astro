---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
  {
    id: 'heating',
    title: 'Heating Services',
    description: 'Complete heating solutions to keep your home warm and comfortable throughout the winter months.',
    image: '/heating-service.jpg',
    services: [
      'Furnace Installation & Replacement',
      'Boiler Repair & Maintenance',
      'Heat Pump Installation',
      'Ductwork Inspection & Repair',
      'Thermostat Installation',
      'Emergency Heating Repair'
    ],
    benefits: [
      'Energy-efficient heating solutions',
      'Lower utility bills',
      'Improved indoor air quality',
      'Reliable winter comfort'
    ]
  },
  {
    id: 'cooling',
    title: 'Air Conditioning Services',
    description: 'Professional AC installation and repair services to ensure optimal cooling performance during hot summer months.',
    image: '/cooling-service.jpg',
    services: [
      'Central AC Installation',
      'Ductless Mini-Split Systems',
      'AC Repair & Diagnostics',
      'Refrigerant Service',
      'Compressor Replacement',
      'Seasonal Tune-ups'
    ],
    benefits: [
      'Consistent cooling throughout your home',
      'Improved energy efficiency',
      'Better humidity control',
      'Extended equipment lifespan'
    ]
  },
  {
    id: 'maintenance',
    title: 'Maintenance Plans',
    description: 'Comprehensive maintenance programs designed to keep your HVAC system running efficiently and prevent costly breakdowns.',
    image: '/maintenance-service.jpg',
    services: [
      'Seasonal System Tune-ups',
      'Filter Replacement Programs',
      'Comprehensive System Cleaning',
      'Performance Testing & Optimization',
      'Preventive Maintenance Scheduling',
      'Priority Service Scheduling'
    ],
    benefits: [
      'Prevent costly emergency repairs',
      'Extend equipment lifespan',
      'Maintain warranty coverage',
      'Improve energy efficiency'
    ]
  },
  {
    id: 'installation',
    title: 'System Installation',
    description: 'Complete HVAC system installation with expert design, professional installation, and comprehensive warranties.',
    image: '/installation-service.jpg',
    services: [
      'Custom System Design',
      'Load Calculation & Sizing',
      'High-Efficiency Equipment',
      'Professional Installation',
      'System Testing & Commissioning',
      'Warranty Registration'
    ],
    benefits: [
      'Properly sized equipment',
      'Maximum energy efficiency',
      'Professional installation',
      'Comprehensive warranties'
    ]
  },
  {
    id: 'emergency',
    title: 'Emergency Repair',
    description: '24/7 emergency HVAC repair services when you need them most. Fast response times and reliable solutions.',
    image: '/emergency-service.jpg',
    services: [
      '24/7 Emergency Response',
      'Same-Day Service Available',
      'Emergency Diagnostics',
      'Urgent System Repairs',
      'Temporary Heating/Cooling Solutions',
      'Emergency Parts Availability'
    ],
    benefits: [
      'Round-the-clock availability',
      'Fast response times',
      'Experienced technicians',
      'Reliable emergency solutions'
    ]
  },
  {
    id: 'indoor-air',
    title: 'Indoor Air Quality',
    description: 'Improve your home\'s air quality with our comprehensive solutions including air purifiers, humidifiers, and filtration systems.',
    image: '/air-quality-service.jpg',
    services: [
      'Whole-Home Air Purification',
      'Humidity Control Systems',
      'Advanced Filtration Systems',
      'Duct Cleaning Services',
      'UV Light Installation',
      'Air Quality Testing'
    ],
    benefits: [
      'Cleaner, healthier indoor air',
      'Reduced allergens and pollutants',
      'Better respiratory health',
      'Improved overall comfort'
    ]
  }
];
---

<Layout 
  title="HVAC Services - Glenbrook Heating & Air Conditioning"
  description="Comprehensive heating and air conditioning services including installation, repair, maintenance, and emergency service. Professional HVAC solutions for your home."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-24 pb-16 bg-gradient-to-br from-primary-900 to-primary-700 text-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            Our <span class="text-primary-200">Services</span>
          </h1>
          <p class="text-xl md:text-2xl text-primary-100 mb-8">
            Comprehensive HVAC solutions for every home comfort need. From installation to emergency repairs, we've got you covered.
          </p>
          <a href="#services" class="btn-primary bg-white text-primary-600 hover:bg-gray-100">
            Explore Our Services
          </a>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section id="services" class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="space-y-24">
          {services.map((service, index) => (
            <div id={service.id} class="animate-on-scroll">
              <div class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? 'lg:grid-flow-col-dense' : ''}`}>
                <!-- Content -->
                <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
                  <h2 class="text-4xl font-bold text-gray-900 mb-6">{service.title}</h2>
                  <p class="text-xl text-gray-600 mb-8">{service.description}</p>
                  
                  <div class="mb-8">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-4">Our Services Include:</h3>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      {service.services.map((item) => (
                        <li class="flex items-center text-gray-700">
                          <svg class="w-5 h-5 text-primary-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                          </svg>
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="mb-8">
                    <h3 class="text-2xl font-semibold text-gray-900 mb-4">Benefits:</h3>
                    <ul class="space-y-2">
                      {service.benefits.map((benefit) => (
                        <li class="flex items-center text-gray-700">
                          <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          {benefit}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <a href="/contact" class="btn-primary">
                    Get Free Estimate
                  </a>
                </div>
                
                <!-- Image/Visual -->
                <div class={index % 2 === 1 ? 'lg:col-start-1' : ''}>
                  <div class="bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl p-8 h-96 flex items-center justify-center">
                    <div class="text-center">
                      <div class="w-24 h-24 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                      <h3 class="text-2xl font-bold text-primary-800 mb-2">{service.title}</h3>
                      <p class="text-primary-700">Professional Service</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-primary-600 text-white">
      <div class="container-custom text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to Get Started?
        </h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          Contact us today for a free estimate on any of our HVAC services. Our experienced technicians are ready to help improve your home comfort.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary bg-white text-primary-600 hover:bg-gray-100">
            Get Free Estimate
          </a>
          <a href="tel:+1-555-HVAC-PRO" class="btn-secondary border-white text-white hover:bg-white hover:text-primary-600">
            Call (555) HVAC-PRO
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>