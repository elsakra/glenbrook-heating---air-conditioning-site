---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);
---

<Layout 
  title={`${post.data.title} - Glenbrook Heating & Air Blog`}
  description={post.data.description}
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-24 pb-16 bg-gradient-to-br from-primary-900 to-primary-700 text-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <nav class="text-primary-200 mb-6">
            <a href="/blog" class="hover:text-white transition-colors">Blog</a>
            <span class="mx-2">â€¢</span>
            <span>{post.data.title}</span>
          </nav>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            {post.data.title}
          </h1>
          
          <div class="flex items-center space-x-6 text-primary-200">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
            
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span>By {post.data.author}</span>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-2 mt-6">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-primary-800 text-primary-200 text-sm rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-16">
          <!-- Main Content -->
          <div class="lg:col-span-3">
            <article class="prose prose-lg max-w-none animate-on-scroll">
              <Content />
            </article>
            
            <!-- Share Buttons -->
            <div class="mt-12 pt-8 border-t border-gray-200 animate-on-scroll">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
              <div class="flex space-x-4">
                <a 
                  href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                  </svg>
                  <span>Twitter</span>
                </a>
                
                <a 
                  href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  <span>Facebook</span>
                </a>
                
                <a 
                  href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  <span>LinkedIn</span>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="space-y-8">
              <!-- Author Info -->
              <div class="bg-gray-50 rounded-xl p-6 animate-on-scroll">
                <h3 class="text-lg font-bold text-gray-900 mb-4">About the Author</h3>
                <div class="flex items-center space-x-3 mb-4">
                  <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{post.data.author}</div>
                    <div class="text-sm text-gray-600">HVAC Expert</div>
                  </div>
                </div>
                <p class="text-gray-600 text-sm">
                  Our team of certified HVAC professionals brings years of experience and expertise to help you maintain optimal home comfort.
                </p>
              </div>
              
              <!-- Related Posts -->
              {relatedPosts.length > 0 && (
                <div class="bg-gray-50 rounded-xl p-6 animate-on-scroll">
                  <h3 class="text-lg font-bold text-gray-900 mb-4">Related Articles</h3>
                  <ul class="space-y-4">
                    {relatedPosts.map((relatedPost) => (
                      <li>
                        <a href={`/blog/${relatedPost.slug}`} class="block hover:text-primary-600 transition-colors">
                          <h4 class="font-semibold text-gray-900 mb-1 text-sm">{relatedPost.data.title}</h4>
                          <p class="text-xs text-gray-500">
                            {relatedPost.data.pubDate.toLocaleDateString('en-US', {
                              month: 'short',
                              day: 'numeric',
                              year: 'numeric'
                            })}
                          </p>
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              <!-- CTA -->
              <div class="bg-primary-600 text-white rounded-xl p-6 animate-on-scroll">
                <h3 class="text-lg font-bold mb-4">Need HVAC Service?</h3>
                <p class="mb-4 text-sm">
                  Ready to improve your home comfort? Contact our expert team for professional HVAC services.
                </p>
                <a href="/contact" class="btn-primary bg-white text-primary-600 hover:bg-gray-100 w-full text-center block text-sm">
                  Get Free Estimate
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose {
    color: #374151;
    max-width: none;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: #111827;
    font-weight: 700;
  }
  
  .prose h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    margin-top: 2rem;
  }
  
  .prose h2 {
    font-size: 1.875rem;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }
  
  .prose h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    margin-top: 1.25rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #1d4ed8;
  }
</style>