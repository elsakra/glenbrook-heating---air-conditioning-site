---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout 
  title="HVAC Blog - Glenbrook Heating & Air Conditioning"
  description="Expert HVAC tips, maintenance advice, and industry insights from the professionals at Glenbrook Heating & Air Conditioning."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-24 pb-16 bg-gradient-to-br from-primary-900 to-primary-700 text-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            HVAC <span class="text-primary-200">Blog</span>
          </h1>
          <p class="text-xl md:text-2xl text-primary-100">
            Expert tips, maintenance advice, and industry insights to help you get the most out of your heating and cooling system.
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <div class="space-y-8">
              {sortedPosts.map((post) => (
                <article class="bg-white rounded-xl shadow-lg overflow-hidden card-hover animate-on-scroll">
                  <div class="p-8">
                    <div class="flex items-center space-x-4 text-sm text-gray-500 mb-4">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                      <span>â€¢</span>
                      <span>By {post.data.author}</span>
                    </div>
                    
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
                      <a href={`/blog/${post.slug}`} class="hover:text-primary-600 transition-colors">
                        {post.data.title}
                      </a>
                    </h2>
                    
                    <p class="text-gray-600 mb-6 text-lg">
                      {post.data.description}
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <div class="flex flex-wrap gap-2">
                        {post.data.tags.map((tag) => (
                          <span class="px-3 py-1 bg-primary-100 text-primary-700 text-sm rounded-full">
                            {tag}
                          </span>
                        ))}
                      </div>
                      
                      <a 
                        href={`/blog/${post.slug}`} 
                        class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors"
                      >
                        Read More
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </div>
          
          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="space-y-8">
              <!-- Categories -->
              <div class="bg-white rounded-xl p-6 shadow-lg animate-on-scroll">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Categories</h3>
                <ul class="space-y-2">
                  <li><a href="#" class="text-gray-600 hover:text-primary-600 transition-colors">Maintenance Tips</a></li>
                  <li><a href="#" class="text-gray-600 hover:text-primary-600 transition-colors">Energy Efficiency</a></li>
                  <li><a href="#" class="text-gray-600 hover:text-primary-600 transition-colors">HVAC Systems</a></li>
                  <li><a href="#" class="text-gray-600 hover:text-primary-600 transition-colors">Seasonal Tips</a></li>
                  <li><a href="#" class="text-gray-600 hover:text-primary-600 transition-colors">Indoor Air Quality</a></li>
                </ul>
              </div>
              
              <!-- Recent Posts -->
              <div class="bg-white rounded-xl p-6 shadow-lg animate-on-scroll">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Recent Posts</h3>
                <ul class="space-y-4">
                  {sortedPosts.slice(0, 3).map((post) => (
                    <li>
                      <a href={`/blog/${post.slug}`} class="block hover:text-primary-600 transition-colors">
                        <h4 class="font-semibold text-gray-900 mb-1">{post.data.title}</h4>
                        <p class="text-sm text-gray-500">
                          {post.data.pubDate.toLocaleDateString('en-US', {
                            month: 'short',
                            day: 'numeric',
                            year: 'numeric'
                          })}
                        </p>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- CTA -->
              <div class="bg-primary-600 text-white rounded-xl p-6 animate-on-scroll">
                <h3 class="text-xl font-bold mb-4">Need HVAC Service?</h3>
                <p class="mb-4">Our expert technicians are ready to help with all your heating and cooling needs.</p>
                <a href="/contact" class="btn-primary bg-white text-primary-600 hover:bg-gray-100 w-full text-center block">
                  Get Free Estimate
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>